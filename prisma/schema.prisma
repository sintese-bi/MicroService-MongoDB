generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URLPRISMA")
}

model company {
  id                 String    @id @default(auto()) @map("_id") @db.ObjectId
  company_emp        Int?
  company_name       String?
  company_date       DateTime?
  company_week_day   String?
  company_fuel       String?
  company_volume     Float?
  company_cost       Float?
  company_sale       Float?
  company_profit     Float?
  company_created_at DateTime  @default(now())
  company_updated_at DateTime  @updatedAt
}
